# === FastAPI Server Configuration ===
AUTH_SERVICE_URL=https://ai-video-backend.jackhui.com.au
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Base CV Configuration
BASE_CV_PATH=user_cv/your_cv.docx  # Path to your base CV document
# Email ID for CLI
JOB_USER_EMAIL=your-email@email.com
# For Docker (Chromium)
CHROMIUM_PATH=/usr/bin/chromium
HEADLESS=true
RUNNING_IN_DOCKER=false
# Local Chrome Path
CHROME_PATH="/Applications/Google Chrome.app/Contents/MacOS/Google Chrome"

# === Airtable Configuration ===
AIRTABLE_PAT=your-airtable-personal-access-token
AIRTABLE_BASE_ID=your-base-id
AIRTABLE_TABLE_ID=your-main-table-id
AIRTABLE_TABLE_ID_HISTORY=your-history-table-id
AIRTABLE_TABLE_ID_USER_CONFIGS=your-user-configs-table-id
AIRTABLE_TABLE_ID_CV_VERSIONS=your-cv-versions-table-id
# Required fields in CV_Versions table:
# - version_id (Single line text) - Primary key e.g., cv_a1b2c3d4e5f6
# - user_email (Email) - User identifier
# - version_name (Single line text) - Display name
# - storage_path (Single line text) - MinIO object key
# - file_size (Number) - File size in bytes
# - auto_category (Single select) - Auto-detected role category
# - user_tags (Multiple select) - User-defined tags
# - parent_version_id (Single line text) - Parent if forked
# - source_job_link (URL) - Job this CV was created for
# - source_job_title (Single line text) - Source job title
# - is_archived (Checkbox) - Soft delete flag
# - usage_count (Number) - Times used, default 0
# - response_count (Number) - Callbacks received, default 0
# - last_used_at (Date) - Last application date
# - content_hash (Single line text) - MD5 for deduplication
#
# Required fields in User Configs table:
# - user_email (Single line text, Primary)
# - base_cv_path (Single line text)
# - base_cv_link (URL)
# - linkedin_job_url (URL)
# - seek_job_url (URL)
# - max_jobs_to_scrape (Number)
# - additional_search_term (Long text)
# - google_search_term (Long text)
# - location (Single line text)
# - hours_old (Number)
# - results_wanted (Number)
# - country (Single line text)
# - email_alerts (Checkbox, default: true)
# - telegram_alerts (Checkbox, default: false)
# - wechat_alerts (Checkbox, default: false)
# - weekly_digest (Checkbox, default: true)
# - telegram_chat_id (Single line text)
# - wechat_openid (Single line text)
# - notification_email (Email)

# === Job Platform URLs ===
LINKEDIN_JOB_URL=https://linkedin.com
SEEK_JOB_URL=https://seek.com

# === Azure AI Configuration ===
AZURE_AI_ENDPOINT=https://your-azure-endpoint.openai.azure.com
AZURE_AI_API_KEY=your-azure-ai-api-key
AZURE_DEPLOYMENT=your-deployment-name

# === Notification Settings ===
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id
WECHAT_API_KEY=your-wechat-api-key
WECHAT_BOT_URL=https://your-wechat-webhook-url
EMAIL_USER=your-email@domain.com
EMAIL_PASSWORD=your-email-password
SMTP_SERVER=your-smtp-server.com
DEFAULT_FROM_EMAIL=no-reply@yourdomain.com
DEFAULT_TO_EMAIL=user@domain.com

# === GitHub OAuth Configuration ===
# Create OAuth App at: https://github.com/settings/developers
# Set callback URL to: http://localhost:3000/auth/github/callback (dev)
# or https://your-domain.com/auth/github/callback (prod)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# === Job Search Parameters for Indeed and Glassdoor and Google ===
LOCATION=Melbourne,VIC
COUNTRY=australia
HOURS_OLD=168
RESULTS_WANTED=10
JOB_MATCH_THRESHOLD=7
MAX_JOBS_TO_SCRAPE=50
CHECK_INTERVAL_MIN=60
ADDITIONAL_SEARCH_TERM='AI IT (manager OR head OR director) "software engineering" leadership'
GOOGLE_SEARCH_TERM='head of IT or IT manager jobs near [Location] since last week'

# === MinIO Storage Configuration ===
# Storage backend: "minio" (default) or "wordpress"
CV_STORAGE_BACKEND=minio
# MinIO server endpoint (internal Docker network)
MINIO_ENDPOINT=minio:9000
# MinIO external endpoint (for browser-accessible presigned URLs)
# Format: https://your-domain.com/storage (nginx proxies /storage/ to MinIO)
# Leave empty if MinIO is accessed directly (local dev)
MINIO_EXTERNAL_ENDPOINT=https://winning-cv.jackhui.com.au/storage
# MinIO credentials
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
# MinIO bucket name (created automatically)
MINIO_BUCKET=winningcv-cvs
# Use HTTPS for MinIO connections
MINIO_SECURE=false

# === WordPress Storage Configuration (legacy/fallback) ===
WORDPRESS_SITE=https://your-wordpress-site.com
WORDPRESS_USERNAME=your-wp-username
WORDPRESS_APP_PASSWORD=your-wp-app-password
